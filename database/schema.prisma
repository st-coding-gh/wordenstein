// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Settings {
  id                         String  @id @default(cuid())
  isOxfordRecorded           Boolean @default(false)
  isCardsRecordedToVocabular Boolean @default(false)
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  password  String
  sessionId String?
}

model Card {
  id                    String @id @default(cuid())
  word                  String
  transcription         String
  definition            String
  translation           String
  comparison            String
  examplesBestChoice    String
  examplesNotBestChoice String
  imagePrompt           String
  image                 Json?
  correctAnswers        Int
}

model Vocabulary {
  id   Int    @id @default(autoincrement())
  word String
}

model WordsPossiblyUnknown {
  id   String @id @default(cuid())
  word String
}

model WordsIgnored {
  id   String @id @default(cuid())
  word String
}

model WordsUnknown {
  id   String @id @default(cuid())
  word String
}

model CardsGenerationLog {
  id                 Int      @id @default(autoincrement())
  dateTime           String
  isFinished         Boolean  @default(false)
  isSuccess          Boolean?
  totalCards         Int
  generatedCards     Int?
  totalTimeMs        Int?
  estimatedEndTimeMs Int?
  errorMessage       String?
}
